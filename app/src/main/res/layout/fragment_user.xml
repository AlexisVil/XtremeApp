<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/userfragment"
            android:gravity="center"
            android:textSize="35sp"
            android:layout_marginTop="50dp"
            android:textStyle="italic"
            />
    </LinearLayout>
    <!-- TODO: Update blank fragment layout -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <!--Reportar Pago-->
        <Button
            android:id="@+id/btn_pago"
            app:backgroundTint="@color/white"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"

            android:background="@drawable/btn_shadow"
            android:gravity="center"
            android:text="@string/btn_pago"
            android:textColor="@color/xtreme_2_1" />
        <!--Boton Ventas Recientes-->
        <Button
            android:id="@+id/btn_ventas"
            app:backgroundTint="@color/white"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"

            android:background="@drawable/btn_shadow"
            android:gravity="center"
            android:text="@string/btn_ventas"
            android:textColor="@color/xtreme_2_1" />
        <!--Boton Saldo-->
        <Button
            android:id="@+id/btn_saldo"
            app:backgroundTint="@color/white"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"

            android:background="@drawable/btn_shadow"
            android:gravity="center"
            android:text="@string/btn_saldo"
            android:textColor="@color/xtreme_2_1" />
        <!--Boton Cerrar SesiÃ³n-->
        <Button
            android:id="@+id/btn_signout"
            app:backgroundTint="@color/white"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="90dp"
            android:background="@drawable/btn_shadow"
            android:gravity="center"
            android:text="@string/inicio_btn"
            android:textColor="@color/xtreme_2_1" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</FrameLayout>